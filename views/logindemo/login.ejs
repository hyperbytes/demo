<!-- Wappler include head-page="layouts/main" fontawesome_5="cdn" bootstrap5="local" is="dmx-app" id="login" appConnect="local" components="{dmxNotifications:{},dmxFormatter:{},dmxBrowser:{}}" -->
<div is="dmx-browser" id="browser1"></div>
<dmx-notifications id="notifies1"></dmx-notifications>
<meta name="ac:route" content="/logindemo/login">
<div class="container">
    <div class="row">
        <div class="col text-center">
            <h1>Login Demo</h1>
        </div>
    </div>
</div>
<div class="container mt-5">
    <div class="row">
        <div class="col border rounded rounded-2 border-primary border-3 pt-3">
            <form id="form1" is="dmx-serverconnect-form" method="post" action="/api/logindemo/login" dmx-on:success="run([{run:{action:`notifies1.success(\'Login Successful by user of role \'+form1.data.query.role)`}},{condition:{if:`(form1.data.query.role == \'A\')`,then:{steps:{run:{action:`browser1.goto(\'/admin/home\')`}}}}},{condition:{if:`(form1.data.query.role == \'L\')`,then:{steps:{run:{action:`browser1.goto(\'/locations/home\')`}}}}},{condition:{if:`(form1.data.query.role == \'F\')`,then:{steps:{run:{action:`browser1.goto(\'/freelancer/home\')`}}}}},{condition:{if:`(form1.data.query.role == \'C\')`,then:{steps:{run:{action:`browser1.goto(\'/clients/home\')`}}}}}])">
                <div class="form-group mb-3 row">
                    <label for="input1" class="col-sm-2 col-form-label">eMail</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="input1" name="email" aria-describedby="input1_help" placeholder="Enter some text">
                    </div>
                </div>
                <div class="form-group mb-3 row">
                    <label for="input2" class="col-sm-2 col-form-label">Password</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="input2" name="password" aria-describedby="input1_help" placeholder="Enter some text" value="Hello">
                    </div>
                </div>
                <div class="form-group mb-3 row">
                    <legend class="col-sm-2 col-form-label">&nbsp;</legend>
                    <div class="col-sm-10">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="1" id="input3" name="remember">
                            <label class="form-check-label" for="input3">Remember Me</label>
                        </div>
                    </div>
                </div>
                <div class="form-group mb-3 row">
                    <div class="col-sm-2">
                        <p>&nbsp;</p>&nbsp;
                    </div>
                    <div class="col-sm-10">
                        <button id="btn1_submit" type="submit" class="btn btn-primary">Login</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>