<!-- Wappler include head-page="layouts/main" fontawesome_5="cdn" bootstrap5="local" is="dmx-app" id="multi" appConnect="local" components="{dmxFormRepeat:{},dmxDataTraversal:{},dmxNotifications:{}}" -->
<dmx-notifications id="notifies1"></dmx-notifications>
<dmx-serverconnect id="conn_all" url="/api/multiupdate/get_all"></dmx-serverconnect>
<dmx-data-iterator id="iterator_people" dmx-bind:data="conn_all.data.query"></dmx-data-iterator>
<meta name="ac:route" content="/multiupdate/multi">
<div class="container">
    <div class="row">
        <div class="col">
            <form is="dmx-serverconnect-form" id="serverconnectform1" method="post" action="/api/multiupdate/insert" dmx-generator="bootstrap5" dmx-form-type="horizontal" dmx-populate="iterator_people.value" dmx-on:success="notifies1.success('Updated')">
                <div class="form-group mb-3 row">
                    <label for="inp_username" class="col-sm-2 col-form-label">Username</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inp_username" name="username" dmx-bind:value="iterator_people.value.username" aria-describedby="inp_username_help" placeholder="Enter Username">
                    </div>
                </div>
                <div class="form-group mb-3 row">
                    <label for="inp_id" class="col-sm-2 col-form-label">Id</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="inp_id" name="id" dmx-bind:value="iterator_people.value.id" aria-describedby="inp_id_help" placeholder="Enter Id" readonly="true">
                    </div>
                </div>
                <div class="form-group mb-3 row">
                    <label for="inp_password" class="col-sm-2 col-form-label">Password</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inp_password" name="password" dmx-bind:value="iterator_people.value.password" aria-describedby="inp_password_help" placeholder="Enter Password">
                    </div>
                </div>
                <div class="form-group mb-3 row">
                    <label for="inp_role" class="col-sm-2 col-form-label">Role</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inp_role" name="role" dmx-bind:value="iterator_people.value.role" aria-describedby="inp_role_help" placeholder="Enter Role">
                    </div>
                </div>
                <div is="dmx-form-repeat" id="record" dmx-bind:items="iterator_people.value.children">
                    <input id="text1" name="name" type="text" class="form-control" dmx-bind:value="name">
                </div>
                <div class="form-group mb-3 row">
                    <div class="col-sm-2">&nbsp;</div>
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary" dmx-bind:value="iterator_people.value.Save">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>