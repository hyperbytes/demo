<div class="container">
    <div class="row">
        <div class="col">
            <form id="form1">
                <div class="form-group mb-3 row">
                    <label for="input1" class="col-sm-2 col-form-label">Box 1</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="input1" name="input1" aria-describedby="input1_help" placeholder="Enter some text">
                        <small id="input1_help" class="form-text text-muted">Your input is very valuable.</small>
                    </div>
                </div>
                <div class="form-group mb-3 row">
                    <label for="input2" class="col-sm-2 col-form-label">Box 2</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="input2" name="input2" aria-describedby="input1_help" placeholder="Enter some text">
                        <small id="input1_help1" class="form-text text-muted">Your input is very valuable.</small>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <h1 dmx-text="(input2.value.toNumber() + input1.value.toNumber())">A nice paragraph</h1>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
